# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include pyproject.toml
include .env.example

# Include important project files
recursive-include src *.py
recursive-include src *.pyi
recursive-include src py.typed

# Include test files (for development installations)
recursive-include tests *.py
recursive-include tests *.json
recursive-include tests *.xml
recursive-include tests *.mid

# Include example files
recursive-include examples *.py
recursive-include examples *.md

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude *.log
global-exclude *.swp
global-exclude *.bak
global-exclude *~

# Exclude build artifacts
prune build
prune dist
prune *.egg-info

# Exclude CI/CD and development files
exclude .github
exclude .pre-commit-config.yaml
exclude .dockerignore
exclude Dockerfile
exclude docker-compose.yml
exclude Makefile

# Exclude temporary and cache directories
prune .venv
prune venv
prune env
prune node_modules
prune temp
prune tmp
prune cache